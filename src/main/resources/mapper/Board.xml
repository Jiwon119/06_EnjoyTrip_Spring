<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.mapper.BoardMapper">
	<insert id="writeArticle"></insert>
	
	<select id="listArticle" resultType="BoardDto">
		select article_no, user_id, subject, content, hit, register_time 
		from board
	</select>
	<select id="getTotalArticleCount" resultType="Integer">
		select count(*)
		from board
	</select>
	<select id="getArticle"></select>
	<update id="updateHit"></update>
	<update id="modifyArticle"></update>
	<delete id="deleteArticle"></delete>
</mapper>